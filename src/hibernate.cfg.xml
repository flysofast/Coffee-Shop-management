<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
    <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=CoffeeShopAptech</property>
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password">123456</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping class="entities.ProductBill"/>
    <mapping class="entities.Functions"/>
    <mapping class="entities.Bill"/>
    <mapping class="entities.Sysdiagrams"/>
    <mapping class="entities.Diary"/>
    <mapping class="entities.Product"/>
    <mapping class="entities.Account"/>
    <mapping class="entities.RoleFunction"/>
    <mapping class="entities.Role"/>
    <mapping class="entities.Publisher"/>
    <mapping class="entities.Unit"/>
    <mapping class="entities.Price"/>
    <mapping class="entities.Category"/>
  </session-factory>
</hibernate-configuration>
